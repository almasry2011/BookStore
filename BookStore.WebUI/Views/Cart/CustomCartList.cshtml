

@model BookStore.WebUI.Models.CartViewModel
<script src="~/Scripts/bootstrap.min.js"></script>
 
<script href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet"></script>
 
<script href="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" rel="stylesheet"></script>

<style>

    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>


<div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length bs-select" id="selectedColumn_length"><label>Show <select name="selectedColumn_length" aria-controls="selectedColumn" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="selectedColumn_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="selectedColumn"></label></div></div></div>



<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>

        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>

        </tr>
        @foreach (var item in Model.cart.Lines)
        {
            <tr>
                <td> @item.Book.Titel</td>
                <td> @item.Book.Price.ToString("c")</td>
                <td> @item.Quantity</td>
                <td> @((item.Quantity * item.Book.Price).ToString("c") )</td>

            </tr>
        }

    </tbody>



    <tfoot>
        <tr>
            <th>
                Name
            </th>
            <th>
                Position
            </th>
            <th>
                Office
            </th>
            <th>
                Age
            </th>
            <th>
                Start date
            </th>
            <th>
                Salary
            </th>
        </tr>


        <tr>
            <td colspan="3" class="text-center"> Total: </td>
            <td class="">@Model.cart.ComputeTotalPrice().ToString("c")</td>
        </tr>
    </tfoot>
</table>





<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });

</script>
