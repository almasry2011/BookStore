@model IEnumerable<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h2>Index</h2>
<style>

    tr {
       height:100px;
       }
    td {
        vertical-align: middle !important;
        font-size:20px
    }
    tr:hover {
        cursor: pointer;
        background-color: #eee;
    }

</style>
<pi>
    @Html.ActionLink("Create New", "Create")
</pi>
<table class="table table-striped">
    <tr style="height:30px">
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
           Book Image
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr id="@item.ISBN">

        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <img style="width:80px;height:80px" class="img-rounded" src=" ../../Bookimages/@item.ImgagePath    " alt="Alternate Text" />
        </td>
        <td>
            <a class="btn btn-info btn-xs" href="/admin/edit/@item.ISBN  "><span class="glyphicon glyphicon-edit"></span> Edit</a>
            <a class="btn btn-danger btn-xs" href="/admin/delete/@item.ISBN "><span class="glyphicon glyphicon-remove"></span> Del</a>
        </td> 
    </tr>
}
</table>


<script>
    $(document).ready(function () {
        $("tr").dblclick(function () {
            bid = this.id;
            window.open("/admin/details/"+bid);
        });
    });


</script>